@model DRD.Models.Skill

@{
    ViewData["Title"] = "Nová dovednost";
}



<hr />
<div class="row">
    <div class="col-3"></div>
    <div class="col-6 characterCard">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Atribut" class="control-label"></label>
                <select asp-for="Atribut" class="form-control" asp-items="Html.GetEnumSelectList<AtributEnum>()"></select>
                <span asp-validation-for="Atribut" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Seriousness" class="control-label"></label>
                <select asp-for="Seriousness" class="form-control" asp-items="Html.GetEnumSelectList<SeriousnessEnum>()"></select>
                <span asp-validation-for="Seriousness" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Verification" class="control-label"></label>
                <input asp-for="Verification" class="form-control" />
                <span asp-validation-for="Verification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalSuccess" class="control-label"></label>
                <textarea asp-for="TotalSuccess" class="form-control"></textarea>
                <span asp-validation-for="TotalSuccess" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Success" class="control-label"></label>
                <textarea asp-for="Success" class="form-control"></textarea>
                <span asp-validation-for="Success" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Failure" class="control-label"></label>
                <textarea asp-for="Failure" class="form-control"></textarea>
                <span asp-validation-for="Failure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FatalFailure" class="control-label"></label>
                <textarea asp-for="FatalFailure" class="form-control"></textarea>
                <span asp-validation-for="FatalFailure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="btn-group">
                <input type="submit" value="Ulož" class="btn btn-primary" />
                <a class="btn btn-dark" asp-action="Index">Zpět</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
