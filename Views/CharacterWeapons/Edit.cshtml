@model DRD.Models.CharacterWeapon

@{
    ViewData["Title"] = "Uprav";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CharacterID" class="control-label"></label>
                <select asp-for="CharacterID" class="form-control" asp-items="ViewBag.CharacterID"></select>
                <span asp-validation-for="CharacterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeaponId" class="control-label"></label>
                <select asp-for="WeaponId" class="form-control" asp-items="ViewBag.WeaponId"></select>
                <span asp-validation-for="WeaponId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ulož" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-CharacterId="@Model.CharacterID">Zpět na seznam zbraní</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
