@model DRD.Models.CharacterWeapon

@{
    ViewData["Title"] = "Zahodit zbraň";
}

<div class="row">
	<div class="col-3"></div>
	<div class=" col-6 characterCard">
		<h3 class="text-center">Chceš se opravdu zbavit zbraně ?</h3>
		<hr />
		<h3 class="text-center fw-bolder ">@Html.DisplayFor(model => model.Weapon.NameWeapon)</h3>
		<hr />

		<form asp-action="Delete">
			<input type="hidden" asp-for="Id" />

			<div class="btn-group container ">
				<input type="submit" value="Delete" class="btn btn-danger " />
				<a asp-action="Index" asp-route-CharacterId="@Model.CharacterID" class="btn btn-dark ">Zpět</a>
			</div>

		</form>
	</div>
</div>

